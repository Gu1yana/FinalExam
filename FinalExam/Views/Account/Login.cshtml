@model LoginVM

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            <form class="user" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input class="form-control form-control-user" asp-for="UsernameOrEmail"
                                               placeholder="Username or Email Enter ...">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input class="form-control form-control-user" asp-for="Password"
                                           placeholder="Password">
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Login
                                </button>
                            </form>
                        
                            <div class="text-center">
                                <a class="small" asp-action="Register" asp-controller="Account">Register</a>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
